import pygame
from pygame.sprite import Sprite

class Bullet(Sprite):
    
    def __init__(self, ai_game):
        super().__init__()
        self.screen = ai_game.screen
        self.settings = ai_game.settings
        self.color = self.settings.bullet_color
        # self.image = pygame.image.load("baby22.png")

        # Создание снаряда в позиции (0, 0) и назначение правильной позиции 
        #self.rect = pygame.Rect(0, 0, self.settings.bullet_width, self.settings.bullet_height)
        
        self.image_fire = pygame.image.load('foto/fire.png').convert_alpha()
        self.rect = self.image_fire.get_rect()
        self.rect.midtop = ai_game.ship.rect.midtop
        

        self.y = float(self.rect.y)
    
    def update(self):
        """Перемещение снаряпа вверх по экрану"""
        # обновление позиции корабля в вещественном формате
        self.y -= self.settings.speed_bullet
        self.rect.y = self.y
 
    def draw_bullet(self):
        self.screen.blit(self.image_fire, self.rect)
